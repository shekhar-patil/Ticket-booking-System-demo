<p id="notice"><%= notice %></p>

<h1>Shows</h1>

<table>
  <thead>
    <tr>
      <th>Movie</th>
      <th>Theater</th>
      <th>Start date</th>
      <th>Available</th>
      <th colspan="3"></th>
    </tr>
  </thead>

  <tbody>
    <% @shows.each do |show| %>
      <tr>
        <td><%= show.movie.name %></td>
        <td><%= show.theater.name %></td>
        <td><%= show.start_date %></td>
        <td><%= show.available %></td>
        <td><%= link_to 'Show', theater_show_path(@theater, show) %></td>
        <td><%= link_to 'Edit', edit_theater_show_path(@theater, show) %></td>
        <td><%= link_to 'Destroy', theater_show_path(@theater, show), method: :delete, data: { confirm: 'Are you sure?' } %></td>
      </tr>
    <% end %>
  </tbody>
</table>

<br>

